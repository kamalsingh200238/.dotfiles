{
  "permissions": {
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Permission requested\" with title \"Claude Code\"'"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Waiting for response\" with title \"Claude Code\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Finished request\" with title \"Claude Code\"'"
          }
        ]
      }
    ]
  },
  "outputStyle": "default",
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}
